// JWT_SECRET: Secret key used to sign and verify JSON Web Tokens (JWTs) for user authentication.
JWT_SECRET=your_secret_key

// JWT_REFRESH_SECRET: Secret key used to sign and verify refresh tokens.
JWT_REFRESH_SECRET=your_refresh_secret

// MONGODB_URI: Connection string for the MongoDB database.
MONGODB_URI=mongodb://localhost:27017/carbon-harvest

// PORT: Port number for the server to listen on.
PORT=5000

// NODE_ENV: Environment mode (e.g., development, production).
NODE_ENV=development

// ALLOWED_ORIGINS: Comma-separated list of allowed origins for CORS.
ALLOWED_ORIGINS=http://localhost:3000,http://yourdomain.com

// RATE_LIMIT_WINDOW: The time window (in minutes) for rate limiting (default is 15).
RATE_LIMIT_WINDOW=15

// RATE_LIMIT_MAX: The maximum number of requests allowed within the window (default is 100).
RATE_LIMIT_MAX=100ALLOWED_ORIGINS=http://localhost:3000
